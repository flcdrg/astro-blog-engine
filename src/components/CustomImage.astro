---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
    desktopImgUrl: string | ImageMetadata;
    alt: string | undefined;
}

const { desktopImgUrl, alt } = Astro.props;

const desktopImg = await getImage({
    src: desktopImgUrl,
    format: "webp",
    width: 100,
    height: 100,
});
---

<picture>
    <!-- <source media="(max-width: 799px)" srcset={mobileImg.src} /> -->
    <source media="(min-width: 100px)" srcset={desktopImg.src} />
    <img src={desktopImg.src} alt={alt || undefined} />
</picture>

<style>
    picture {
        float: left;
        margin: 0 1em 1em 0;
    }
</style>
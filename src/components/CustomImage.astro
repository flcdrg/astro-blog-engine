---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

interface Props {
    desktopImgUrl: ImageMetadata;
    alt: string | undefined;
}

const { desktopImgUrl, alt } = Astro.props;

if (!alt) {
    console.log("desktopImg missing alt text", desktopImgUrl.src);
}
---

<Picture src={desktopImgUrl} loading="lazy" alt={alt} width={100} height={100} />

<style>
    picture {
        float: left;
        margin: 0 1em 1em 0;
    }
</style>
---
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import SiteTitle from "../components/SiteTitle.astro";

interface Props {
  pageTitle?: string;
  frontmatter?: {
    title?: string;
    description?: string;
  };
}

const { pageTitle, frontmatter } = Astro.props;

// Site-wide JSON-LD structured data
const siteJsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${Astro.site}#organization`,
      name: "David Gardiner",
      url: Astro.site,
      logo: "https://www.gravatar.com/avatar/37edf2567185071646d62ba28b868fab",
      sameAs: [
        "https://github.com/flcdrg",
        "https://www.linkedin.com/in/davidrgardiner/",
        "https://mastodon.online/@DavidRGardiner",
        "https://stackoverflow.com/users/25702/david-gardiner",
        "https://bsky.app/profile/david.gardiner.net.au"
      ]
    },
    {
      "@type": "WebSite",
      "@id": `${Astro.site}#website`,
      url: Astro.site,
      name: "Dave's Daydreams",
      description: "Blog by David Gardiner",
      publisher: { "@id": `${Astro.site}#organization` },
      potentialAction: {
        "@type": "SearchAction",
        target: `${Astro.site}tags/{search_term_string}`,
        "query-input": "required name=search_term_string"
      }
    }
  ]
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="canonical"
      href={new URL(Astro.url.pathname.replace(".html", ""), Astro.site)}
    />
    <slot name="head" />
    <title>{pageTitle || frontmatter?.title}</title>
    {
      frontmatter?.description && (
        <meta name="description" content={frontmatter.description} />
      )
    }
    <!-- Cloudflare Web Analytics --><script is:inline is:raw defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "a5756d0460ba41beba515f2b7666093d"}'></script><!-- End Cloudflare Web Analytics -->
    <script is:raw is:inline
      type="application/ld+json"
      set:html={JSON.stringify(siteJsonLd)}
    />
  </head>
  <body>
    <header>
      <nav>
        <Navigation>
          <slot name="site-title" slot="site-title">
            <SiteTitle />
          </slot>
        </Navigation>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
